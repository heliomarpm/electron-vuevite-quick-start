# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 160

[*.{json,scss,css,ts}]
indent_size = 2

[*.{ts,mts,js,mjs,cjs}]
quote_type = double

[*.md]
indent_style = tab
max_line_length = off
trim_trailing_whitespace = false
